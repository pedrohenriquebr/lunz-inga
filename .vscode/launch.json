    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web) with Hot Reload",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "watch",
                "run",
                "--project",
                "./LuzInga.Api/LuzInga.Api.csproj",
                "--launch-profile",
                "LuzInga.Api"
            ],
            "cwd": "${workspaceFolder}/backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "console": "integratedTerminal",
            "dotnetWatch": true
        }

    ]
}